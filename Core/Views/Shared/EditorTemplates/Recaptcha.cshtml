@inherits YetaWF.Core.Views.Shared.Recaptcha<YetaWF.Core.Views.Shared.RecaptchaData>
@{
    RecaptchaConfig config = RecaptchaConfig.LoadRecaptchaConfig();
    if (string.IsNullOrWhiteSpace(config.PublicKey)) {
        throw new YetaWF.Core.Support.Error(this.__ResStr("errPrivateKey", "The Recaptcha configuration settings are missing - no public key found"));
    }
}
@Html.RenderRecaptcha("", Model, HtmlAttributes: new { Id = ControlId })
<script>
    Recaptcha.create("@config.PublicKey",
        "@ControlId",
        {
            theme: "@config.GetTheme()"
        }
    );
</script>